<h1>Dine with Friends</h1>
<form action="/post" method="POST" id="formsie">
	<span><label for="username">Username:</label>
	<input name="username" type="text" id="username" value="Your name" /></span><br />
	<span><label for="time">Time to wait:</label>
	<input name="time" id="time" type="text" value="in minutes" /><br /></span>
	<input type="submit" id="submit" name="submit" value="Submit!" />
</form>

<div id="fb-root"></div>
<script>
	window.fbAsyncInit = function() {
		FB.init({
		  appId      : '341849212513410',
		  status     : true, 
		  cookie     : true,
		  xfbml      : true,
		  oauth      : true,
		});

		FB.api('/me', function(user) {
		  if (user) {
			console.log("user id: "+user.id);
		    var image = document.getElementById('image');
		    image.src = 'https://graph.facebook.com/' + user.id + '/picture';
		    var name = document.getElementById('fbname');
		    name.innerHTML = user.name
		  }
		});
	};

	(function(d){
		var js, id = 'facebook-jssdk'; if (d.getElementById(id)) {return;}
		js = d.createElement('script'); js.id = id; js.async = true;
		js.src = "//connect.facebook.net/en_US/all.js";
		d.getElementsByTagName('head')[0].appendChild(js);
	}(document));

</script>
<div align="center">
  <img id="image"/>
  <p>name: <span id="fbname"></span></p>
</div>
<div class="fb-login-button" data-scope="email,user_checkins">
	Login with Facebook
</div>